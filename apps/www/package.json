{
  "name": "@ironscout/www",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3004",
    "build": "node ./scripts/verify-internal-links.mjs && node ./scripts/generate-market-snapshots.mjs && next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "verify:links": "node ./scripts/verify-internal-links.mjs",
    "verify:snapshot:sitemap": "node ./scripts/verify-market-snapshot-sitemap-alignment.mjs",
    "verify:snapshot:embed": "node ./scripts/verify-market-snapshot-embed-parity.mjs",
    "verify:snapshot:jsonld": "node ./scripts/verify-market-snapshot-jsonld-parity.mjs",
    "verify:snapshot:parity": "pnpm build && pnpm verify:snapshot:sitemap && pnpm verify:snapshot:embed && pnpm verify:snapshot:jsonld",
    "verify:snapshot:canary": "node ./scripts/verify-market-snapshot-production-canary.mjs"
  },
  "dependencies": {
    "@ironscout/ui": "workspace:*",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3"
  }
}
