# Admin app environment (apps/admin)

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ironscout"

# Auth (shared secret across all apps)
NEXTAUTH_URL="http://localhost:3002"
NEXTAUTH_SECRET="your-shared-secret"
ADMIN_EMAILS="admin@example.com,another-admin@example.com"

# OAuth providers (required for admin login)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# API proxy (server-side calls to apps/api)
API_URL="http://localhost:8000"
ADMIN_API_KEY="your-admin-api-key"

# Optional cross-app URLs
NEXT_PUBLIC_API_URL="http://localhost:8000"
NEXT_PUBLIC_WEB_URL="http://localhost:3000"
NEXT_PUBLIC_MERCHANT_URL="http://localhost:3003"

# Optional email configuration
RESEND_API_KEY="re_..."
EMAIL_FROM="IronScout <noreply@ironscout.ai>"

# Optional cookies
COOKIE_DOMAIN=""
