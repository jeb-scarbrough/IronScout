# Merchant app environment (apps/merchant)

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ironscout"

# Auth (shared secret across all apps)
NEXTAUTH_URL="http://localhost:3003"
NEXTAUTH_SECRET="your-shared-secret"
ADMIN_EMAILS="admin@example.com,another-admin@example.com"

# API configuration
NEXT_PUBLIC_API_URL="http://localhost:8000"
INTERNAL_API_URL="http://localhost:8000"

# Optional URLs
NEXT_PUBLIC_MERCHANT_URL="http://localhost:3003"
ADMIN_PORTAL_URL="http://localhost:3002"

# Optional email configuration
RESEND_API_KEY="re_..."
MERCHANT_EMAIL_FROM="IronScout <noreply@ironscout.ai>"
OPERATIONS_EMAIL_TO="ops@example.com"

# Optional Stripe price IDs (billing UI)
STRIPE_PRICE_ID_MERCHANT_PRO_MONTHLY="price_..."
STRIPE_PRICE_ID_MERCHANT_STANDARD_MONTHLY="price_..."

# Optional Redis (feed refresh)
# Use REDIS_URL for Render, or REDIS_HOST/PORT/PASSWORD for local dev
REDIS_URL=""
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
