# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ironscout"

# =============================================================================
# Premium Feature Flags
# =============================================================================
# Master switch for premium features. When false:
# - All users are treated as FREE tier
# - Checkout/billing endpoints return 404
# - Stripe webhooks verify signature but skip side effects
FEATURE_PREMIUM_ENABLED="false"

# Optional granular flags (inherit from FEATURE_PREMIUM_ENABLED if not set)
# FEATURE_PAYWALL_ENABLED="true"
# FEATURE_PREMIUM_API_ENABLED="true"

# =============================================================================
# Stripe (only active when FEATURE_PREMIUM_ENABLED=true)
# =============================================================================
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# Additional CORS origins (comma-separated). Use for local dev, staging, or preview deploys.
# Production *.ironscout.ai domains are hardcoded in app.ts and do not need to be listed here.
# CORS_ORIGINS="https://app.local.ironscout.ai,https://admin.local.ironscout.ai,https://merchant.local.ironscout.ai"

# Server Configuration
PORT=8000

# AI Search (intent parsing + embeddings)
OPENAI_API_KEY="sk-your-openai-api-key"

# Authentication
# MUST match NEXTAUTH_SECRET across all apps (web, api, admin, merchant)
# Generate a secure random key: openssl rand -hex 32
NEXTAUTH_SECRET="your-shared-secret"

# Comma-separated list of admin email addresses
ADMIN_EMAILS="admin@example.com,another-admin@example.com"

# Admin proxy auth (must match ADMIN_API_KEY in apps/admin)
# Generate: openssl rand -hex 32
ADMIN_API_KEY="your-admin-api-key"

# Email senders (must be verified in Resend)
ALERTS_EMAIL_FROM="alerts@ironscout.ai"
NOREPLY_EMAIL_FROM="noreply@ironscout.ai"

# Redis (required for job queues)
# Use REDIS_URL for Render, or REDIS_HOST/PORT/PASSWORD for local dev
REDIS_URL=""
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
