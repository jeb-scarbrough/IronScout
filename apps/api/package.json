{
  "name": "@ironscout/api",
  "version": "1.0.0",
  "description": "Backend API for IronScout.ai platform",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "tsx src/index.ts",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:run:pr": "vitest run src/services/ai-search/__tests__/functional/search-functional-matrix.test.ts src/services/ai-search/__tests__/functional/search-relevance-ranking.test.ts src/services/ai-search/__tests__/search-service.test.ts src/services/ai-search/__tests__/queryraw-safety.test.ts src/services/ai-search/__tests__/consumer-output-safety.test.ts",
    "test:run:nightly": "node ./scripts/run-nightly-tests.mjs",
    "test:integration": "vitest run src/__tests__/integration/**/*.integration.test.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@ironscout/crypto": "workspace:*",
    "@ironscout/upc": "workspace:*",
    "@ironscout/db": "workspace:*",
    "@ironscout/logger": "workspace:*",
    "@ironscout/notifications": "workspace:*",
    "@ironscout/redis": "workspace:*",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.67.3",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.3",
    "openai": "^6.18.0",
    "resend": "^6.9.1",
    "stripe": "^20.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.2",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
